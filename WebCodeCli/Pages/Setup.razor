@page "/setup"
@namespace WebCodeCli.Pages
@using WebCodeCli.Domain.Domain.Service
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Routing
@using WebCodeCli.Components

<PageTitle>@T("setup.pageTitle")</PageTitle>

<div class="min-h-screen bg-gradient-to-br from-gray-50 via-gray-100 to-gray-200 py-8 px-4">
    <div class="max-w-4xl mx-auto">
        <div class="flex justify-end mb-4">
            <LanguageSwitcher OnLanguageChanged="HandleLanguageChanged" />
        </div>
        <!-- 头部 Logo -->
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center mb-4">
                <img src="/images/logo.png" alt="WebCode Logo" class="w-20 h-20 object-contain" />
            </div>
            <h1 class="text-3xl font-bold text-gray-800 mb-2">@T("setup.title")</h1>
            <p class="text-gray-600">@T("setup.subtitle")</p>
        </div>

        <!-- 步骤指示器 -->
        <div class="flex items-center justify-center mb-8">
            @for (int i = 1; i <= 4; i++)
            {
                var step = i;
                <div class="flex items-center">
                    <div class="@GetStepClass(step)">
                        @if (_currentStep > step)
                        {
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        }
                        else
                        {
                            @step
                        }
                    </div>
                    <span class="ml-2 text-sm font-medium @(step <= _currentStep ? "text-gray-800" : "text-gray-400")">
                        @GetStepTitle(step)
                    </span>
                    @if (step < 4)
                    {
                        <div class="w-12 h-0.5 mx-4 @(step < _currentStep ? "bg-gray-800" : "bg-gray-300")"></div>
                    }
                </div>
            }
        </div>

        <!-- 主内容卡片 -->
        <div class="bg-white rounded-2xl shadow-2xl border border-gray-200 overflow-hidden">
            @if (_isLoading)
            {
                <div class="flex items-center justify-center py-20">
                    <div class="text-center">
                        <div class="animate-spin h-12 w-12 border-4 border-gray-700 rounded-full border-t-transparent mx-auto mb-4"></div>
                        <p class="text-gray-600">@T("setup.loading")</p>
                    </div>
                </div>
            }
            else if (_isCompleted)
            {
                <!-- 完成页面 -->
                <div class="p-12 text-center">
                    <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
                        <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-800 mb-4">@T("setup.completedTitle")</h2>
                    <p class="text-gray-600 mb-8">@T("setup.completedDesc")</p>
                    <button @onclick="GoToHome" class="btn-primary px-8 py-3 text-lg">
                        @T("setup.start")
                    </button>
                </div>
            }
            else
            {
                <!-- 步骤内容 -->
                @switch (_currentStep)
                {
                    case 1:
                        @RenderStep1()
                        break;
                    case 2:
                        @RenderStep2()
                        break;
                    case 3:
                        @RenderStep3()
                        break;
                    case 4:
                        @RenderStep4()
                        break;
                }
            }
        </div>

        <!-- 错误提示 -->
        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="mt-6 bg-red-50 border-l-4 border-red-500 text-red-700 px-4 py-3 rounded-lg">
                <div class="flex items-start gap-2">
                    <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>@_errorMessage</span>
                </div>
            </div>
        }

        <!-- 页脚 -->
        <div class="mt-8 text-center text-sm text-gray-500">
            <p>@T("setup.footer", ("year", DateTime.Now.Year.ToString()))</p>
        </div>
    </div>
</div>

