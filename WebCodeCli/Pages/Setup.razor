                <!-- 工作区目录 -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        @T("setup.workspaceRootLabel") 
                        <span class="text-gray-400 font-normal">@T("setup.workspaceRootHint")</span>
                    </label>
                    <input type="text" 
                           @bind="_config.WorkspaceRoot"
                           class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-transparent"
                           placeholder="@_defaultWorkspaceRoot" />
                    <p class="mt-2 text-sm text-gray-500">
                        @T("setup.workspaceRootDesc", ("path", "/app/workspaces"))
                    </p>
                </div>
            </div>

            <!-- 底部按钮 -->
            <div class="flex justify-end mt-8 pt-6 border-t border-gray-200">
                <button @onclick="NextStep" class="btn-primary">
                    @T("common.next")
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </button>
            </div>
        </div>
    };

