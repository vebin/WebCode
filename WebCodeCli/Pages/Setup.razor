    private List<EnvVarItem> _openCodeEnvVars = new();

    // OpenCode 环境变量操作
    private void AddOpenCodeEnvVar()
    {
        _openCodeEnvVars.Add(new EnvVarItem());
        StateHasChanged();
    }

    private void RemoveOpenCodeEnvVar(EnvVarItem item)
    {
        _openCodeEnvVars.Remove(item);
        StateHasChanged();
    }

